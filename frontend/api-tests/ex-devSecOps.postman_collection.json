	"item": [
		{
			"name": "Get All Users",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const users = pm.response.json();\r",
							"\r",
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200)\r",
							"});\r",
							"\r",
							"pm.test(\"Response is an array\", function(){\r",
							"    pm.expect(users).to.be.an('array')\r",
							"})\r",
							"\r",
							"pm.test(\"Users have required fields\", function(){\r",
							"    for(let user of users){\r",
							"        pm.expect(user).to.have.property(\"id\")\r",
							"        pm.expect(user).to.have.property(\"firstName\")\r",
							"        pm.expect(user).to.have.property(\"lastName\")\r",
							"        pm.expect(user).to.have.property(\"email\")\r",
							"    }\r",
							"})\r",
							"\r",
							"//Add users array to collection variables.Can bu used in other tests in same collection\r",
							"pm.collectionVariables.set(\"users\", users)\r",
							"console.log(pm.collectionVariables.get(\"users\"))\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
